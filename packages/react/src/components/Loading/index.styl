.lyric-loading
  display flex
  align-items center
  justify-content center
  height 200px

  .lyric-loading-icon
    font-size 20px
    vertical-align -0.125em
    animation-name lyric-loading-effect
    animation-duration 0.4s
    animation-timing-function linear
    animation-iteration-count infinite
    fill #1890ff

.lyric-loading-fill
  position relative
  user-select none

  .lyric-loading
    position fixed
    left 0
    z-index 1
    width 100%
    height 100%
    min-height 200px
    max-height 400px

    & + *
      opacity 0.5
      pointer-events none

@keyframes lyric-loading-effect
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)
