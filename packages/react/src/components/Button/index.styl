.lyric-button
  position relative
  padding 0 16px
  letter-spacing 1px
  border none
  // border-radius 4px
  outline none
  cursor pointer
  transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
  display inline-flex
  align-items center
  justify-content center
  line-height 1
  user-select none

  &:hover
    filter brightness(0.9)

  &.large
    height 36px
    font-size 16px

  &.middle
    height 32px
    font-size 14px

  &.small
    height 28px
    font-size 12px

  &.primary
    color #fff
    background #1890ff

  &.minor
    color #333
    background-color transparent
    border 1px solid #d9d9d9

  &.link
    width auto
    height auto
    padding 0
    color #1890ff
    line-height normal
    background-color transparent

    &.lyric-button-loading::before
      display none

    .lyric-button-loading-span
      &.fill
        & + .span
          opacity 0

  .span
    pointer-events none

  .lyric-button-loading-span
    overflow hidden
    text-align left
    transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)

    &:not(.fill)
      width 0

    &.fill
      width auto
      position absolute
      top -1px
      right -1px
      bottom -1px
      left -1px
      display flex
      align-items center
      justify-content center

      & + .span
        opacity 0.3

.lyric-button.lyric-button-loading:not([disabled])
  pointer-events none

.lyric-button.lyric-button-loading::before
  display block

.lyric-button::before
  position absolute
  top -1px
  right -1px
  bottom -1px
  left -1px
  z-index 1
  display none
  background #fff
  border-radius inherit
  opacity 0.35
  transition opacity 0.2s
  content ""
  pointer-events none

@keyframes lyric-button-effect
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.lyric-button-loading-icon
  transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
  animation-name lyric-button-effect
  animation-duration 1s
  animation-timing-function linear
  animation-iteration-count infinite
  vertical-align -0.125em
